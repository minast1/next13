// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id  String @id @default(cuid())
  title String 
  price Decimal
  description String 
  image String
  category  String  
  qty Int  @default(1)
  cart Cart? @relation(fields: [cartId], references: [id])
  cartId String? 
}

model Cart {
  id String @id @default(cuid())
  products Product[]
  total Decimal 
}
